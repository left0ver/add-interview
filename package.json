    "typeorm": "^0.3.10",
    "typescript": "^4.4.2",
    "xss": "^1.0.14"
  },
  "scripts": {
    "dev": "HTTPS=true SSL_CRT_FILE=$HOME/.cert/cert.pem SSL_KEY_FILE=$HOME/.cert/key.pem react-scripts start",
    "build": "rm -rf ./build && react-scripts build",
    "eject": "react-scripts eject",
    "start": "node ./dist/index.js dotenv_config_path=./.env.prod",
    "build:server": "rm -rf ./dist && tsc",
    "dev:server": "nodemon --watch './server'  -e  ts,tsx  --exec esno  ./server/index.ts dotenv_config_path=./.env.dev"
  },
  "script-description": {
    "dev": "开发环境下启动前端项目",
    "build": "打包前端项目 --生成build文件夹",
    "start": "启动打包后的后端项目,用于pm2部署",
    "build:server": "打包后端项目 -- 生成dist文件夹",
    "dev:server": "开发环境下启动后端项目"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/lodash.debounce": "^4.0.7",
    "esno": "^0.16.3",
    "leftover-prettier": "^0.0.4",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1"
  }
