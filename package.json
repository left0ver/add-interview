  "private": true,
  "description": "针对qqRot-interview项目，用来帮助你录入面试题",
  "dependencies": {
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "lodash.debounce": "^4.0.8",
    "mysql2": "^2.3.3",
    "rc-progress": "^3.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.2",
    "react-hot-toast": "^2.4.0",
    "react-scripts": "5.0.1",
